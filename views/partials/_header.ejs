<body>
<h1 style="color: rgb(23, 111, 122); font-family: Arial, Helvetica, sans-serif"><strong>Tiny App</strong></h1>
<% if (username === undefined){ %>
  <form  action="/login" method="POST">
    <div class="form-group mb-2">
      <input class="form-control" type="text" name="username" placeholder="Enter your Username: " style="width: 300px; margin: 1em">
      <button type="submit" style="background-color:rgb(134, 218, 218);color:cornsilk">Submit</button>
    </div>
  </form>
<%} else{ %>
  <form action="/logout" method="POST">
    Not <%=username%> ?
    <button type="submit" style="background-color:rgb(134, 218, 218);color:cornsilk">Logout</button>
  </form>
<%} %>
<input type="hidden" name="username" value="<%= username %>" />
</body>